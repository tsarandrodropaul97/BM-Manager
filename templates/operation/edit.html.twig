{% extends 'base.html.twig' %}

{% block title %}Modifier l'Opération{% endblock %}

{% block body %}
<div class="row g-3">
    <div class="col-12">
        <div class="card mb-3 text-white overflow-hidden" style="background: linear-gradient(135deg, #2c7be5 0%, #1a4d8c 100%);">
            <div class="bg-holder d-none d-lg-block bg-card" 
                style="background-image:url({{ asset('assets/img/icons/spot-illustrations/corner-4.png') }});">
            </div>
            <div class="card-body position-relative p-4">
                <div class="row flex-between-center g-3">
                    <div class="col-12 col-sm-auto">
                        <h5 class="mb-0 text-white">Modifier l'Opération</h5>
                        <p class="mb-0 fs-11 text-white-50">{{ operation.titre }}</p>
                    </div>
                    <div class="col-12 col-sm-auto ms-auto">
                        <a href="{{ path('app_operation_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <span class="fas fa-arrow-left me-1"></span>Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        {{ form_start(form) }}
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header border-bottom bg-light py-3">
                <h6 class="mb-0"><span class="fas fa-edit me-2 text-primary"></span>Détails de l'opération</h6>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-9">
                        {{ form_row(form.titre, {'attr': {'class': 'form-control form-control-lg fw-bold'}}) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.type, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': 8}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header border-bottom bg-light py-3">
                <h6 class="mb-0"><span class="fas fa-bullhorn me-2 text-warning"></span>Ciblage de la Communication</h6>
            </div>
            <div class="card-body p-4">
                <div class="form-check form-switch mb-4">
                    {{ form_widget(form.isGlobal, {'attr': {'class': 'form-check-input', 'id': 'isGlobalSwitch'}}) }}
                    <label class="form-check-label h6 mb-0 ms-2" for="isGlobalSwitch">Diffuser à tous les locataires</label>
                </div>
                <div id="targetLocatairesWrapper">
                    {{ form_row(form.targetLocataires) }}
                    <div class="alert alert-info border-0 p-2 mt-2 fs-11">
                        <i class="fas fa-info-circle me-1"></i>Maintenez <strong>CTRL</strong> pour (dé)sélectionner plusieurs locataires.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Documents Actuels -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header border-bottom bg-light py-3">
                <h6 class="mb-0"><span class="fas fa-file-alt me-2 text-info"></span>Fichiers Actuels ({{ operation.files|length }})</h6>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush scrollbar" style="max-height: 250px;">
                    {% for file in operation.files %}
                        <div class="list-group-item d-flex align-items-center justify-content-between py-2 px-3">
                            <div class="d-flex align-items-center">
                                <span class="fas {{ file.filePath|split('.')|last == 'pdf' ? 'fa-file-pdf text-danger' : 'fa-image text-success' }} me-2"></span>
                                <span class="fs-11 text-900 text-truncate" style="max-width: 150px;">{{ file.originalName }}</span>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="{{ asset('uploads/operations/' ~ file.filePath) }}" target="_blank" class="text-primary" title="Voir">
                                    <span class="fas fa-eye fs-11"></span>
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="p-3 text-center text-muted fs-11 italic">Aucun document joint.</div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Nouveaux Documents -->
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header border-bottom bg-light py-3">
                <h6 class="mb-0"><span class="fas fa-plus-circle me-2 text-success"></span>Ajouter des fichiers</h6>
            </div>
            <div class="card-body p-4">
                {{ form_row(form.files) }}
                <div id="filePreviewList" class="mt-3"></div>
            </div>
        </div>

        <!-- Action Card -->
        <div class="card border-0 shadow-sm border-top border-primary border-3 mt-3">
            <div class="card-body p-4">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        <span class="fas fa-save me-2"></span>Mettre à jour
                    </button>
                    <a href="{{ path('app_operation_show', {id: operation.id}) }}" class="btn btn-falcon-default btn-sm">
                        Annuler les modifications
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const isGlobalSwitch = document.getElementById('isGlobalSwitch');
    const targetWrapper = document.getElementById('targetLocatairesWrapper');
    
    function updateCiblageVisibility() {
        if (isGlobalSwitch.checked) {
            targetWrapper.style.display = 'none';
        } else {
            targetWrapper.style.display = 'block';
        }
    }
    
    if (isGlobalSwitch && targetWrapper) {
        isGlobalSwitch.addEventListener('change', updateCiblageVisibility);
        updateCiblageVisibility();
    }

    const fileInput = document.querySelector('input[type="file"]');
    const previewList = document.getElementById('filePreviewList');
    
    if (fileInput && previewList) {
        fileInput.addEventListener('change', function() {
            previewList.innerHTML = '<h6 class="fs-12 mb-2">Nouveaux fichiers :</h6>';
            Array.from(this.files).forEach(file => {
                const item = document.createElement('div');
                item.className = 'd-flex align-items-center p-2 mb-2 bg-light rounded border fs-11 fw-semi-bold';
                item.innerHTML = `
                    <span class="fas ${file.type.includes('pdf') ? 'fa-file-pdf text-danger' : 'fa-image text-success'} me-2"></span>
                    <span class="text-truncate">${file.name}</span>
                `;
                previewList.appendChild(item);
            });
        });
    }
});
</script>
{% endblock %}
