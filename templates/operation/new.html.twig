{% extends 'base.html.twig' %}

{% block title %}Nouvelle Opération{% endblock %}

{% block body %}
<div class="row g-3">
    <div class="col-12">
        <div class="card mb-3">
            <div class="card-header border-bottom">
                <div class="row flex-between-center g-3">
                    <div class="col-12 col-sm-auto">
                        <h5 class="mb-0">Créer une Nouvelle Opération</h5>
                        <p class="mb-0 fs-11 text-muted">Gestion des événements, incidents et communications</p>
                    </div>
                    <div class="col-12 col-sm-auto ms-auto">
                        <a href="{{ path('app_operation_index') }}" class="btn btn-outline-secondary btn-sm">
                            <span class="fas fa-arrow-left me-1"></span>Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        {{ form_start(form) }}
        <div class="card mb-3">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <span class="fas fa-info-circle me-2 text-primary"></span>
                    Informations Générales
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-8">
                        {{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.type, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': 6}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <span class="fas fa-bullhorn me-2 text-warning"></span>
                    Ciblage de la Communication
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-check form-switch mb-3">
                            {{ form_widget(form.isGlobal, {'attr': {'class': 'form-check-input', 'id': 'isGlobalSwitch'}}) }}
                            <label class="form-check-label fw-bold" for="isGlobalSwitch">Diffuser à tous les locataires</label>
                        </div>
                    </div>
                    <div class="col-12" id="targetLocatairesWrapper">
                        {{ form_row(form.targetLocataires) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <span class="fas fa-paperclip me-2 text-success"></span>
                    Documents et Photos
                </h6>
            </div>
            <div class="card-body">
                <div class="p-3 border border-2 border-dashed rounded-3 text-center bg-subtle-primary mb-3">
                    <span class="fas fa-upload fa-2x text-primary opacity-50 mb-2"></span>
                    <p class="fs-11 text-600 mb-0">PDF, JPG, PNG (Max 10Mo)</p>
                </div>
                {{ form_row(form.files) }}
                <div id="filePreviewList" class="mt-3"></div>
            </div>
        </div>

        <div class="card sticky-md-top" style="top: 2rem; z-index: 1020;">
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        <span class="fas fa-save me-2"></span>Publier l'opération
                    </button>
                    <button type="reset" class="btn btn-link py-0 text-muted fs-11">Réinitialiser le formulaire</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion du switch Global vs Cible
    const isGlobalSwitch = document.getElementById('isGlobalSwitch');
    const targetWrapper = document.getElementById('targetLocatairesWrapper');
    
    function updateCiblageVisibility() {
        if (isGlobalSwitch.checked) {
            targetWrapper.classList.add('d-none');
        } else {
            targetWrapper.classList.remove('d-none');
        }
    }
    
    if (isGlobalSwitch && targetWrapper) {
        isGlobalSwitch.addEventListener('change', updateCiblageVisibility);
        updateCiblageVisibility();
    }

    // Preview des fichiers
    const fileInput = document.querySelector('input[type="file"]');
    const previewList = document.getElementById('filePreviewList');
    
    if (fileInput && previewList) {
        fileInput.addEventListener('change', function() {
            previewList.innerHTML = '<h6 class="fs-11 text-uppercase text-muted fw-bold mb-2 ls-1">Fichiers sélectionnés :</h6>';
            Array.from(this.files).forEach(file => {
                const item = document.createElement('div');
                item.className = 'd-flex align-items-center p-2 mb-2 bg-light rounded border';
                item.innerHTML = `
                    <span class="fas ${file.type.includes('pdf') ? 'fa-file-pdf text-danger' : 'fa-image text-success'} me-2"></span>
                    <span class="text-truncate fs-11 fw-semi-bold">${file.name}</span>
                `;
                previewList.appendChild(item);
            });
        });
    }
});
</script>
{% endblock %}
