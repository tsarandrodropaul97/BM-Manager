{% extends 'base.html.twig' %}

{% block title %}Nouveau Contrat{% endblock %}

{% block body %}
<div class="row g-3">
    <div class="col-12">
        <div class="card border-0 shadow-none bg-transparent">
            <div class="card-body p-0">
                <h4 class="mb-3 fw-bold text-1100 dark__text-white">
                    <span class="fas fa-file-plus me-2 text-primary"></span>
                    Initialisation d'un <span class="text-primary">Nouveau Contrat</span>
                </h4>
            </div>
        </div>
    </div>

    {{ form_start(form) }}
    <div class="row g-3">
        <div class="col-lg-8">
            <!-- Section Informations -->
            <div class="card border-0 shadow-sm mb-3 overflow-hidden">
                <div class="card-header bg-subtle-primary py-3 border-0">
                    <h6 class="mb-0 fw-bold d-flex align-items-center text-primary">
                        <span class="fas fa-info-circle me-2"></span>Identité du Bail
                    </h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-12">
                            {{ form_label(form.reference, null, {'label_attr': {'class': 'fs-11 text-uppercase fw-bold
                            text-600 mb-1'}}) }}
                            {{ form_widget(form.reference, {'attr': {'class': 'form-control shadow-none'}}) }}
                        </div>
                        <div class="col-12 col-md-6">
                            {{ form_label(form.locataire, null, {'label_attr': {'class': 'fs-11 text-uppercase fw-bold
                            text-600 mb-1'}}) }}
                            {{ form_widget(form.locataire, {'attr': {'class': 'form-select shadow-none'}}) }}
                        </div>
                        <div class="col-12 col-md-6">
                            {{ form_label(form.bien, null, {'label_attr': {'class': 'fs-11 text-uppercase fw-bold
                            text-600 mb-1'}}) }}
                            {{ form_widget(form.bien, {'attr': {'class': 'form-select shadow-none'}}) }}
                        </div>
                        <div class="col-12 col-md-6">
                            {{ form_label(form.dateDebut, null, {'label_attr': {'class': 'fs-11 text-uppercase fw-bold
                            text-600 mb-1'}}) }}
                            {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control shadow-none'}}) }}
                        </div>
                        <div class="col-12 col-md-6">
                            {{ form_label(form.dateFin, null, {'label_attr': {'class': 'fs-11 text-uppercase fw-bold
                            text-600 mb-1'}}) }}
                            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control shadow-none'}}) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section Financière -->
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="card-header bg-subtle-success py-3 border-0">
                    <h6 class="mb-0 fw-bold d-flex align-items-center text-success">
                        <span class="fas fa-coins me-2"></span>Paramètres Financiers
                    </h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-12 col-md-4">
                            {{ form_label(form.loyerHorsCharges, null, {'label_attr': {'class': 'fs-11 text-uppercase
                            fw-bold text-600 mb-1'}}) }}
                            {{ form_widget(form.loyerHorsCharges, {'attr': {'class': 'form-control shadow-none'}}) }}
                        </div>
                        <div class="col-12 col-md-4">
                            {{ form_label(form.charges, null, {'label_attr': {'class': 'fs-11 text-uppercase fw-bold
                            text-600 mb-1'}}) }}
                            {{ form_widget(form.charges, {'attr': {'class': 'form-control shadow-none'}}) }}
                        </div>
                        <div class="col-12 col-md-4">
                            {{ form_label(form.depotGarantie, null, {'label_attr': {'class': 'fs-11 text-uppercase
                            fw-bold text-600 mb-1'}}) }}
                            {{ form_widget(form.depotGarantie, {'attr': {'class': 'form-control shadow-none'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-3 overflow-hidden">
                <div class="card-header bg-subtle-warning py-3 border-0">
                    <h6 class="mb-0 fw-bold d-flex align-items-center text-warning">
                        <span class="fas fa-tasks me-2"></span>Cycle de vie
                    </h6>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        {{ form_label(form.statut, null, {'label_attr': {'class': 'fs-11 text-uppercase fw-bold text-600
                        mb-1'}}) }}
                        {{ form_widget(form.statut, {'attr': {'class': 'form-select shadow-none'}}) }}
                    </div>
                    <div class="mb-0">
                        {{ form_label(form.documentPdf, null, {'label_attr': {'class': 'fs-11 text-uppercase fw-bold
                        text-600 mb-1'}}) }}
                        {{ form_widget(form.documentPdf, {'attr': {'class': 'form-control form-control-sm
                        shadow-none'}}) }}
                        <div class="fs-11 text-muted mt-2 italic">Format PDF uniquement (max 10Mo).</div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="card-body p-4">
                    <button type="submit" class="btn btn-primary d-block w-100 mb-3 fw-bold shadow-none">
                        <span class="fas fa-check-circle me-2"></span>Générer le contrat
                    </button>
                    <a href="{{ path('app_contrat_index') }}"
                        class="btn btn-falcon-default d-block w-100 fw-bold shadow-none">
                        Annuler
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

<style>
    .italic {
        font-style: italic;
    }
</style>
{% endblock %}