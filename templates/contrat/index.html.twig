{% extends 'base.html.twig' %}

{% block title %}Gestion des Contrats{% endblock %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header bg-light">
            <div class="row flex-between-end">
                <div class="col-auto align-self-center">
                    <h5 class="mb-0">Contrats de Bail</h5>
                    <p class="mb-0 fs-11 text-muted">Aperçu et suivi de vos baux actifs</p>
                </div>
                <div class="col-auto ms-auto">
                    <a href="{{ path('app_contrat_new') }}" class="btn btn-primary btn-sm shadow-none">
                        <span class="fas fa-plus me-1"></span>Générer un bail
                    </a>
                </div>
            </div>
        </div>
    </div>

    {% if expiringSoon|length > 0 %}
        <div class="alert alert-warning border-0 d-flex align-items-center mb-3 shadow-sm" role="alert">
            <div class="bg-warning me-3 icon-item rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                <span class="fas fa-bell text-white fs-11"></span>
            </div>
            <p class="mb-0 flex-1">
                <strong>Attention Échéance :</strong> {{ expiringSoon|length }} contrat(s) arrivent à terme d'ici 3 mois. Pensez aux renouvellements !
            </p>
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

    <div class="card mb-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive scrollbar">
                <table class="table table-sm table-striped fs-11 mb-0">
                    <thead class="bg-200 text-900">
                        <tr>
                            <th class="ps-3 py-3" style="width: 15%">Référence</th>
                            <th class="py-3" style="width: 20%">Locataire / Bien</th>
                            <th class="py-3 text-center" style="width: 15%">Validité</th>
                            <th class="py-3 text-center" style="width: 15%">Loyer Total</th>
                            <th class="py-3 text-center" style="width: 15%">Statut</th>
                            <th class="pe-3 py-3 text-end" style="width: 20%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contrat in contrats %}
                            <tr class="align-middle">
                                <td class="ps-3 fw-semi-bold text-primary">{{ contrat.reference }}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-l me-2">
                                            {% if contrat.locataire.photo %}
                                                <img src="{{ asset('uploads/locataires/' ~ contrat.locataire.photo) }}" alt="" class="rounded-circle">
                                            {% else %}
                                                <div class="avatar-name rounded-circle bg-subtle-primary text-primary"><span class="fas fa-user"></span></div>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <div class="fw-bold text-900">{{ contrat.locataire.nomComplet }}</div>
                                            <div class="fs-11 text-muted">{{ contrat.bien.designation }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="text-900 fw-semi-bold">{{ contrat.dateDebut|date('d/m/Y') }}</div>
                                    <div class="fs-11 {{ contrat.dateFin and contrat in expiringSoon ? 'text-warning fw-bold' : 'text-muted' }}">
                                        au {{ contrat.dateFin ? contrat.dateFin|date('d/m/Y') : 'Infini' }}
                                    </div>
                                </td>
                                <td class="text-center fw-bold text-primary">
                                    {{ (contrat.loyerHorsCharges + contrat.charges)|number_format(0, ',', ' ') }} Ar
                                </td>
                                <td class="text-center">
                                    {% set badgeClass = 'bg-subtle-secondary' %}
                                    {% if contrat.statut == 'actif' %}{% set badgeClass = 'bg-subtle-success' %}
                                    {% elseif contrat.statut == 'termine' %}{% set badgeClass = 'bg-subtle-info' %}
                                    {% elseif contrat.statut == 'resilie' %}{% set badgeClass = 'bg-subtle-danger' %}{% endif %}
                                    <span class="badge rounded-pill {{ badgeClass }}">{{ contrat.statut|capitalize }}</span>
                                </td>
                                <td class="pe-3 text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-outline-primary" title="Consulter & Visualiser">
                                            <span class="fas fa-eye me-1"></span>Détails
                                        </a>
                                        <button class="btn btn-outline-primary dropdown-toggle dropdown-toggle-none" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="fas fa-ellipsis-h"></span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end py-0">
                                            <a class="dropdown-item" href="{{ path('app_contrat_edit', {'id': contrat.id}) }}">Modifier</a>
                                            {% if contrat.documentPdf %}
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item text-danger" href="{{ asset('uploads/contrats/' ~ contrat.documentPdf) }}" target="_blank">Télécharger PDF</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="avatar avatar-4xl mb-3 mx-auto">
                                        <div class="avatar-name rounded-circle bg-subtle-primary text-primary"><span class="fas fa-file-invoice"></span></div>
                                    </div>
                                    <h5 class="text-800">Aucun contrat trouvé</h5>
                                    <p class="text-600 fs-11">Commencez par créer un nouveau bail pour vos locataires.</p>
                                    <a href="{{ path('app_contrat_new') }}" class="btn btn-primary btn-sm">Créer un contrat</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
