    <div class="card-header">
        <div class="row flex-between-center g-3">
            <div class="col-12 col-sm-auto align-self-center">
                <h5 class="mb-0">Taux d'Occupation</h5>
                <p class="mb-0 fs-11 text-muted">Suivi et analyse de l'occupation de vos biens</p>
            </div>
            <div class="col-12 col-sm-auto ms-auto text-center text-sm-end">
                <div class="btn-group" role="group">
                    <button class="btn btn-primary btn-sm" type="button">
                        <span class="fas fa-download me-1"></span>Exporter
                    </button>
                    <button class="btn btn-outline-primary btn-sm" type="button">
                        <span class="fas fa-filter me-1"></span>Filtrer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sélecteur de période -->
<div class="row g-3 mb-3 align-items-center">
    <div class="col-12 col-md-auto">
        <div class="btn-group w-100 w-md-auto" role="group" aria-label="Période">
            <input type="radio" class="btn-check" name="periode" id="mois" checked>
            <label class="btn btn-outline-primary btn-sm" for="mois">Ce mois</label>

            <input type="radio" class="btn-check" name="periode" id="trimestre">
            <label class="btn btn-outline-primary btn-sm" for="trimestre">Trimestre</label>

            <input type="radio" class="btn-check" name="periode" id="annee">
            <label class="btn btn-outline-primary btn-sm" for="annee">Année</label>
        </div>
    </div>
    <div class="col-12 col-md-auto ms-md-auto">
        <div class="input-group input-group-sm">
            <input class="form-control" type="month" value="2025-09" />
            <button class="btn btn-outline-secondary" type="button">
                <span class="fas fa-calendar-alt"></span>
            </button>
        </div>
    </div>
</div>

