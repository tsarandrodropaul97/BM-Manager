{% extends 'base.html.twig' %}

{% block title %}Détails de l'Avance - {{ avance.locataire.nomComplet }}{% endblock %}

{% block body %}
	<!-- En-tête page -->
	<div class="card mb-3">
		<div class="card-header border-bottom">
			<div class="row flex-between-end">
				<div class="col-auto align-self-center">
					<h5 class="mb-0">Détails de l'Avance</h5>
					<p class="mb-0 fs-11 text-muted">Consultation du versement et de la déduction automatique</p>
				</div>
				<div class="col-auto ms-auto d-flex gap-2">
					<a href="{{ path('app_avance_index') }}" class="btn btn-outline-secondary btn-sm">
						<span class="fas fa-arrow-left me-1"></span>Retour la liste
					</a>
				</div>
			</div>
		</div>
	</div>

	<div class="row g-3">
		<!-- Colonne Gauche : Infos Financières -->
		<div class="col-lg-8">
			<div class="card mb-3">
				<div class="card-header border-bottom">
					<h6 class="mb-0">Résumé du versement</h6>
				</div>
				<div class="card-body">
					<div class="row align-items-center">
						<div class="col-auto">
							<div class="avatar avatar-4xl">
                                <div class="bg-subtle-primary text-primary d-flex align-items-center justify-content-center rounded-circle" style="width: 80px; height: 80px;">
                                    <span class="fas fa-hand-holding-usd fa-2x"></span>
                                </div>
							</div>
						</div>
						<div class="col">
							<h3 class="mb-1 text-primary">{{ avance.montantTotal|number_format(0, ',', ' ') }} Ar</h3>
                            {% if avance.montantDetails %}
                                <div class="fs-11 text-muted mb-2 italic">
                                    <span class="fas fa-calculator me-1"></span>
                                    {% for amt in avance.montantDetails %}
                                        {{ amt|number_format(0, ',', ' ') }} Ar{% if not loop.last %} + {% endif %}
                                    {% endfor %}
                                    = {{ avance.montantTotal|number_format(0, ',', ' ') }} Ar
                                </div>
                            {% endif %}
                            <p class="text-600 mb-1">
                                <span class="fas fa-user me-2"></span>Locataire : <strong>{{ avance.locataire.nomComplet }}</strong>
                            </p>
							<div class="badge rounded-pill bg-subtle-success text-success">
								Versement du {{ avance.dateAccord|date('d/m/Y') }}
							</div>
						</div>
					</div>

					<div class="row mt-4 pt-4 border-top g-3">
						<div class="col-md-6">
							<div class="fs-11 text-muted text-uppercase fw-semi-bold">Contexte / Motif</div>
							<div class="text-700 mt-1">{{ avance.motif|default('Aucun motif précisé.') }}</div>
						</div>
                        <div class="col-md-6 border-start">
                            <div class="fs-11 text-muted text-uppercase fw-semi-bold">Remboursement ce mois</div>
                            <div class="d-flex align-items-center mt-2">
                                <div class="flex-1 me-3">
                                    {% set percent = (stats.montantDeduit / (stats.loyerInitial > 0 ? stats.loyerInitial : 1) * 100)|round %}
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar" role="progressbar" style="width: {{ percent }}%" aria-valuenow="{{ percent }}" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <span class="fw-bold">{{ percent }}%</span>
                            </div>
                        </div>
					</div>
				</div>
                <div class="card-footer bg-light border-top">
                    <div class="row text-center g-2">
                        <div class="col-md-4">
                            <div class="fs-11 text-muted text-uppercase">Loyer Initial</div>
                            <div class="fw-bold fs-9">{{ stats.loyerInitial|number_format(0, ',', ' ') }} Ar</div>
                        </div>
                        <div class="col-md-4 border-start">
                            <div class="fs-11 text-success text-uppercase">Déduit ce mois</div>
                            <div class="fw-bold fs-9 text-success">- {{ stats.montantDeduit|number_format(0, ',', ' ') }} Ar</div>
                        </div>
                        <div class="col-md-4 border-start">
                            <div class="fs-11 text-primary text-uppercase">Solde restant</div>
                            <div class="fw-bold fs-9 text-primary">{{ stats.soldeRestant|number_format(0, ',', ' ') }} Ar</div>
                        </div>
                    </div>
                </div>
			</div>

			<!-- Documents joints -->
			<div class="card mb-3">
				<div class="card-header border-bottom d-flex justify-content-between align-items-center">
					<h6 class="mb-0">Pièces jointes / Justificatifs</h6>
                    <button class="btn btn-link btn-sm p-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUpload">
                        <span class="fas fa-plus me-1"></span>Ajouter un document
                    </button>
				</div>
                <div class="collapse" id="collapseUpload">
                    <div class="card-body bg-light border-bottom">
                        <form action="{{ path('app_avance_show', {'id': avance.id}) }}" method="post" enctype="multipart/form-data">
                            <div class="row g-2 align-items-end">
                                <div class="col">
                                    <label class="form-label fs-11">Sélectionnez un fichier</label>
                                    <input type="file" name="document" class="form-control form-control-sm" required>
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary btn-sm">Uploader</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
				<div class="card-body p-0">
                    <div class="table-responsive scrollbar">
                        <table class="table table-sm table-striped fs-11 mb-0">
                            <thead class="bg-200">
                                <tr>
                                    <th class="ps-3">Fichier</th>
                                    <th>Déposé par</th>
                                    <th>Date</th>
                                    <th class="text-end pe-3">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for doc in avance.documents %}
                                    <tr>
                                        <td class="ps-3 align-middle">
                                            <span class="fas {{ doc.filename|split('.')|last == 'pdf' ? 'fa-file-pdf text-danger' : 'fa-file-image text-primary' }} me-2"></span>
                                            {{ doc.originalName }}
                                        </td>
                                        <td class="align-middle">{{ doc.uploadedBy.userIdentifier }}</td>
                                        <td class="align-middle">{{ doc.uploadedAt|date('d/m/Y H:i') }}</td>
                                        <td class="text-end pe-3">
                                            <a href="{{ asset('uploads/avances/' ~ doc.filename) }}" target="_blank" class="btn btn-link btn-sm p-0">Ouvrir</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">Aucun doument joint.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
				</div>
			</div>
		</div>

		<!-- Colonne Droite : Bail & Règles -->
		<div class="col-lg-4">
			<div class="card mb-3">
				<div class="card-header border-bottom">
					<h6 class="mb-0">Contrat Associé</h6>
				</div>
				<div class="card-body">
					{% if contrat %}
						<div class="d-flex align-items-center mb-3">
							<div class="avatar avatar-2xl me-3">
								<div class="bg-subtle-primary text-primary d-flex align-items-center justify-content-center rounded" style="width: 50px; height: 50px;">
                                    <span class="fas fa-file-contract"></span>
                                </div>
							</div>
							<div>
								<h6 class="mb-0">{{ contrat.reference }}</h6>
								<p class="fs-11 text-muted mb-0">Statut : {{ contrat.statut|capitalize }}</p>
							</div>
						</div>
						<div class="border-top pt-3">
							<div class="d-flex justify-content-between mb-2">
								<span class="text-700 fs-11">Loyer HC :</span>
								<span class="fw-bold">{{ contrat.loyerHorsCharges|number_format(0, ',', ' ') }} Ar</span>
							</div>
                            <div class="d-flex justify-content-between mb-2">
								<span class="text-700 fs-11">Charges :</span>
								<span class="fw-bold">{{ contrat.charges|number_format(0, ',', ' ') }} Ar</span>
							</div>
							<a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-link btn-sm p-0">Voir le contrat
								<span class="fas fa-chevron-right ms-1 fs-11"></span>
							</a>
						</div>
					{% else %}
						<div class="text-center py-4">
							<span class="fas fa-exclamation-triangle fa-3x text-200 mb-2"></span>
							<p class="text-muted fs-11 mb-0">Aucun contrat actif trouvé.</p>
						</div>
					{% endif %}
				</div>
			</div>

			<div class="card">
                <div class="card-header border-bottom">
                    <h6 class="mb-0">Règles métier</h6>
                </div>
				<div class="card-body p-3">
                    <ul class="list-unstyled mb-0 fs-11 text-700">
                        <li class="mb-2"><span class="fas fa-check text-success me-2"></span>Déduction plafonnée au loyer mensuel.</li>
                        <li class="mb-2"><span class="fas fa-check text-success me-2"></span>Report automatique du surplus.</li>
                    </ul>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
