{% extends 'base.html.twig' %}

{% block title %}Historique des Avances
{% endblock %}

{% block body %}
<!-- En-tête page -->
<div class="card mb-3">
    <div class="card-header border-bottom">
        <div class="row flex-between-center g-3">
            <div class="col-12 col-sm-auto text-center text-sm-start">
                <h5 class="mb-0">Historique des Avances</h5>
                <p class="mb-0 fs-11 text-muted">Consultation des versements effectués et solde de déduction automatique
                </p>
            </div>
            <div class="col-12 col-sm-auto ms-auto text-center text-sm-end">
                <div class="d-flex gap-2 justify-content-center justify-content-sm-end">
                    <button class="btn btn-primary btn-sm px-4" type="button" data-bs-toggle="modal"
                        data-bs-target="#modalAvance">
                        <span class="fas fa-plus me-1"></span>{{ is_granted('ROLE_ADMIN') ? 'Saisir une Avance' :
                        'Déclarer un Versement' }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" action="{{ path('app_avance_index') }}" class="row g-3 align-items-center">
            {% if is_granted('ROLE_ADMIN') %}
            <div class="col-12 col-md-2">
                <div class="input-group">
                    <span class="input-group-text bg-200 border-end-0 fs-11">
                        <span class="fas fa-user text-600"></span>
                    </span>
                    <input type="text" name="search" value="{{ filters.search|default('') }}"
                        class="form-control border-start-0 ps-0 fs-11" placeholder="Locataire...">
                </div>
            </div>
            <div class="col-12 col-md-2">
                <div class="input-group">
                    <span class="input-group-text bg-200 border-end-0">
                        <span class="fas fa-home text-600"></span>
                    </span>
                    <select name="bienId" class="form-select border-start-0 ps-0 fs-11" aria-label="Choisir un bien">
                        <option value="">Tous les biens</option>
                        {% for bien in biens %}
                        <option value="{{ bien.id }}" {{ filters.bienId==bien.id ? 'selected' : '' }}>
                            {{ bien.designation }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            {% endif %}

            <div class="{{ is_granted('ROLE_ADMIN') ? 'col-12 col-md-2' : 'col-12 col-md-4' }}">
                <div class="input-group">
                    <span class="input-group-text bg-200 border-end-0 fs-11">
                        <span class="fas fa-calendar-alt text-600"></span>
                    </span>
                    <input type="date" name="date" value="{{ filters.date|default('') }}"
                        class="form-control border-start-0 ps-0 fs-11" title="Filtrer par date de versement">
                </div>
            </div>

            <div class="col-12 col-md-2">
                <div class="input-group">
                    <span class="input-group-text bg-200 border-end-0 fs-11">
                        <span class="fas fa-check-circle text-600"></span>
                    </span>
                    <select name="status" class="form-select border-start-0 ps-0 fs-11">
                        <option value="">Tous les statuts</option>
                        <option value="validée" {{ filters.status=='validée' ? 'selected' : '' }}>Validée</option>
                        <option value="en attente" {{ filters.status=='en attente' ? 'selected' : '' }}>En attente
                        </option>
                    </select>
                </div>
            </div>

            <div class="col-12 col-md-2">
                <div class="input-group">
                    <span class="input-group-text bg-200 border-end-0 fs-11">
                        <span class="fas fa-sort-amount-down text-600"></span>
                    </span>
                    <select name="sort" class="form-select border-start-0 ps-0 fs-11">
                        <option value="DESC" {{ filters.sort=='DESC' ? 'selected' : '' }}>Plus récent</option>
                        <option value="ASC" {{ filters.sort=='ASC' ? 'selected' : '' }}>Plus ancien</option>
                    </select>
                </div>
            </div>

            <div class="col-12 col-md-auto ms-auto text-center text-md-end">
                <div class="d-flex align-items-center justify-content-center justify-content-md-end gap-2">
                    <button type="submit" class="btn btn-primary btn-sm px-4">
                        <span class="fas fa-filter me-1"></span>Filtrer
                    </button>
                    <a href="{{ path('app_avance_index') }}" class="btn btn-link btn-sm text-secondary p-0 fs-11"
                        title="Réinitialiser tous les filtres">
                        <span class="fas fa-redo-alt me-1"></span>Réinitialiser
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

{% if stats.locataireStats %}
<!-- Configuration Déduction -->
<div class="card mb-3 border-subtle-info bg-subtle-info shadow-none">
    <div class="card-body py-2 px-3">
        {% if is_granted('ROLE_ADMIN') %}
        <form action="{{ path('app_avance_index', app.request.query.all) }}" method="POST"
            class="row g-2 align-items-center justify-content-center justify-content-sm-start">
            <input type="hidden" name="locataireId" value="{{ stats.locataireStats.id }}">
            <div class="col-auto text-center text-sm-start">
                <span class="fas fa-cog text-info me-2"></span>
                <span class="fs-11 fw-bold text-700 text-uppercase d-none d-sm-inline">Début déduction :</span>
                <span class="fs-11 fw-bold text-700 text-uppercase d-sm-none">Début :</span>
            </div>
            <div class="col-auto">
                <input type="date" name="dateDebutDeduction"
                    value="{{ stats.locataireStats.dateDebutDeduction ? stats.locataireStats.dateDebutDeduction|date('Y-m-d') : '' }}"
                    class="form-control form-control-sm border-info" style="width: 140px;">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-info btn-sm px-3">
                    <span class="fas fa-save"></span>
                </button>
            </div>
            <div class="col-12 col-md">
                <p class="mb-0 fs-11 text-muted italic text-center text-md-start">
                    <span class="fas fa-question-circle me-1"></span>
                    Calculé depuis la date de la première avance par défaut.
                </p>
            </div>
        </form>
        {% else %}
        <div class="row align-items-center g-2 text-center text-sm-start">
            <div class="col-12 col-sm-auto">
                <span class="fas fa-info-circle text-info me-2"></span>
                <span class="fs-11 fw-bold text-700 text-uppercase">Point de départ du calcul :</span>
            </div>
            <div class="col-12 col-sm-auto">
                <span class="badge badge-subtle-info fs-10">
                    {{ stats.locataireStats.dateDebutDeduction ? stats.locataireStats.dateDebutDeduction|date('d/m/Y') :
                    (oldestDate ? oldestDate|date('d/m/Y') : 'En attente') }}
                </span>
            </div>
            <div class="col-12 col-md">
                <p class="mb-0 fs-11 text-muted italic">
                    Vos statistiques sont calculées automatiquement à partir de cette date.
                </p>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endif %}

<!-- Statistiques Résumées -->
<div class="row g-3 mb-3">
    <div class="col-6 col-md-3">
        <div class="card h-100 shadow-none border border-300 bg-transparent">
            <div class="card-body p-2 p-sm-3">
                <div class="d-flex flex-between-center flex-column flex-sm-row text-center text-sm-start">
                    <div class="order-2 order-sm-1">
                        <h6 class="text-uppercase fs-11 fw-bold text-muted mb-1">Crédit Actuel</h6>
                        <h4 class="text-900 mb-0 fw-bolder fs-10 fs-sm-8">{{ stats.totalAvance|number_format(0, ',', '
                            ') }} <span class="fs-11">Ar</span></h4>
                    </div>
                    <div class="p-2 bg-subtle-primary rounded-circle mb-2 mb-sm-0 order-1 order-sm-2">
                        <span class="fas fa-wallet text-primary fs-11"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100 shadow-none border border-300 bg-transparent">
            <div class="card-body p-2 p-sm-3">
                <div class="d-flex flex-between-center flex-column flex-sm-row text-center text-sm-start">
                    <div class="order-2 order-sm-1">
                        <h6 class="text-uppercase fs-11 fw-bold text-muted mb-1">Mois Restants</h6>
                        <h4 class="text-900 mb-0 fw-bolder fs-10 fs-sm-8">{{ stats.nbMoisCouverts }} <span
                                class="fs-11">Mois</span></h4>
                    </div>
                    <div class="p-2 bg-subtle-primary rounded-circle mb-2 mb-sm-0 order-1 order-sm-2">
                        <span class="fas fa-calendar-check text-primary fs-11"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100 shadow-none border border-300 bg-transparent">
            <div class="card-body p-2 p-sm-3">
                <div class="d-flex flex-between-center flex-column flex-sm-row text-center text-sm-start">
                    <div class="order-2 order-sm-1">
                        <h6 class="text-uppercase fs-11 fw-bold text-muted mb-1">Reprise</h6>
                        <h4 class="text-900 mb-0 fw-bolder fs-10 fs-sm-8 text-nowrap">{{ stats.dateReprise ?
                            stats.dateReprise|date('M Y') : 'N/A' }}</h4>
                    </div>
                    <div class="p-2 bg-subtle-primary rounded-circle mb-2 mb-sm-0 order-1 order-sm-2">
                        <span class="fas fa-hourglass-start text-primary fs-11"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100 shadow-none border border-300 bg-transparent">
            <div class="card-body p-2 p-sm-3">
                <div class="d-flex flex-between-center flex-column flex-sm-row text-center text-sm-start">
                    <div class="order-2 order-sm-1">
                        <h6 class="text-uppercase fs-11 fw-bold text-muted mb-1">Reliquat</h6>
                        <h4 class="text-900 mb-0 fw-bolder fs-10 fs-sm-8">{{ stats.reliquatGlobal|number_format(0, ',',
                            ' ') }} <span class="fs-11">Ar</span></h4>
                    </div>
                    <div class="p-2 bg-subtle-primary rounded-circle mb-2 mb-sm-0 order-1 order-sm-2">
                        <span class="fas fa-coins text-primary fs-11"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Liste des avances -->
<div class="card mb-3">
    <div class="card-header border-bottom">
        <h6 class="mb-0">Liste des Avances ({{ pagination.totalItemCount }})</h6>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive scrollbar">
            <table class="table table-sm table-striped fs-11 mb-0">
                <thead class="bg-200 text-900">
                    <tr>
                        <th class="align-middle ps-3 text-nowrap">Date Versement</th>
                        {% if is_granted('ROLE_ADMIN') %}
                        <th class="align-middle">Locataire</th>
                        {% endif %}
                        <th class="align-middle text-nowrap">Bien & Résidence</th>
                        <th class="align-middle text-end text-nowrap">Montant Versé</th>
                        <th class="align-middle text-center text-nowrap">Justificatifs</th>
                        <th class="align-middle text-center text-nowrap">Statut</th>
                        <th class="align-middle text-end pe-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for avance in pagination %}
                    <tr {% if dateCounts[avance.dateAccord|date('Y-m-d')]|default(0)> 1 %}
                        style="background-color: rgba(255, 193, 7, 0.45) !important;" title="Plusieurs avances à cette
                        date"
                        {% endif %}>
                        <td class="align-middle ps-3">
                            <span class="fw-semi-bold">{{ avance.dateAccord|date('d/m/Y') }}</span>
                        </td>
                        {% if is_granted('ROLE_ADMIN') %}
                        <td class="align-middle">
                            <div class="d-flex align-items-center">
                                <div class="avatar avatar-l me-2">
                                    <div class="bg-subtle-primary text-primary d-flex align-items-center justify-content-center rounded-circle"
                                        style="width: 30px; height: 30px;">
                                        <span class="fs-11">{{ avance.locataire.nomComplet|slice(0, 1) }}</span>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-nowrap text-900">{{ avance.locataire.nomComplet }}</h6>
                                </div>
                            </div>
                        </td>
                        {% endif %}
                        <td class="align-middle text-muted">
                            <span class="fas fa-building me-1 opacity-50"></span>
                            {{ avance.locataire.bien ? avance.locataire.bien.designation : 'Non assigné' }}
                        </td>
                        <td class="align-middle text-end text-primary fw-bold">
                            {{ avance.montantTotal|number_format(0, ',', ' ') }} Ar
                        </td>
                        <td class="align-middle text-center">
                            {% if avance.documents|length > 0 %}
                            {% for doc in avance.documents %}
                            <button class="btn p-0 border-0 btn-preview-doc" data-bs-toggle="modal"
                                data-bs-target="#modalPreviewDoc" data-filename="{{ doc.filename }}"
                                data-original-name="{{ doc.originalName }}" title="{{ doc.originalName }}">
                                <span class="badge badge-subtle-info hover-primary fs-10 cursor-pointer">
                                    <span class="fas fa-file-alt me-1"></span>Voir
                                </span>
                            </button>
                            {% endfor %}
                            {% else %}
                            <span class="badge badge-subtle-secondary fs-10">
                                <span class="fas fa-times-circle me-1"></span>0
                            </span>
                            {% endif %}
                        </td>
                        <td class="align-middle text-center">
                            {% if avance.status == 'validée' %}
                            <span class="badge badge-subtle-success fs-10">
                                <span class="fas fa-check-circle me-1"></span>Validée
                            </span>
                            {% else %}
                            <span class="badge badge-subtle-warning fs-10">
                                <span class="fas fa-clock me-1"></span>En attente
                            </span>
                            {% endif %}
                        </td>
                        <td class="align-middle text-end pe-3">
                            <div class="btn-group btn-group-sm">
                                {% set canApprove = false %}
                                {% if is_granted('ROLE_ADMIN') and not avance.isApprovedByAdmin %}
                                {% set canApprove = true %}
                                {% elseif not is_granted('ROLE_ADMIN') and app.user.locataire and avance.locataire.id ==
                                app.user.locataire.id and not avance.isApprovedByLocataire %}
                                {% set canApprove = true %}
                                {% endif %}

                                {% if is_granted('ROLE_ADMIN') or (avance.status != 'validée' and not
                                avance.isApprovedByLocataire) %}
                                <button class="btn btn-warning me-1 btn-edit-avance" data-id="{{ avance.id }}"
                                    data-locataire="{{ avance.locataire.id }}"
                                    data-date="{{ avance.dateAccord|date('Y-m-d') }}"
                                    data-details='{{ avance.montantDetails|json_encode()|raw }}'
                                    data-total="{{ avance.montantTotal }}" data-motif="{{ avance.motif }}"
                                    data-url="{{ path('app_avance_edit', {id: avance.id}) }}" title="Modifier">
                                    <span class="fas fa-edit"></span>
                                </button>
                                {% endif %}

                                {% if canApprove %}
                                <form action="{{ path('app_avance_approve', {id: avance.id}) }}" method="POST"
                                    class="d-inline">
                                    <button type="submit" class="btn btn-success me-1" title="Valider">
                                        <span class="fas fa-check"></span>
                                    </button>
                                </form>
                                {% endif %}

                                {% if is_granted('ROLE_ADMIN') %}
                                <form method="post" action="{{ path('app_avance_delete', {'id': avance.id}) }}"
                                    class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avance.id) }}">
                                    <button class="btn btn-danger" type="submit" title="Supprimer"
                                        data-confirm="Voulez-vous vraiment supprimer cette avance ?">
                                        <span class="fas fa-trash-alt"></span>
                                    </button>
                                </form>
                                {% else %}
                                <a href="{{ path('app_avance_show', {'id': avance.id}) }}" class="btn btn-light"
                                    title="Détails">
                                    <span class="fas fa-eye"></span>
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="{{ is_granted('ROLE_ADMIN') ? 7 : 6 }}" class="text-center py-5">
                            <span class="fas fa-search-minus fa-3x text-200 mb-3"></span>
                            <p class="text-600 fs-4 fw-semi-bold">Aucune avance trouvée.</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-200 py-2">
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>

<!-- Modal de création d'avance -->
<div class="modal fade" id="modalAvance" tabindex="-1" role="dialog" aria-labelledby="modalAvanceLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0 bg-dark">
            <div class="modal-header bg-black bg-opacity-20 border-bottom border-secondary py-3 px-4">
                <h5 class="modal-title text-white" id="modalAvanceLabel">
                    <span class="fas fa-hand-holding-usd me-2 text-primary"></span>
                    {{ is_granted('ROLE_ADMIN') ? 'Octroyer une Avance' : 'Déclarer une Avance' }}
                </h5>
                <button class="btn-close btn-close-white" type="button" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            {{ form_start(form, {'attr': {'id': 'formAvance'}}) }}
            <div class="modal-body py-4 px-4 text-white">
                <div class="alert alert-subtle-info fs-11 border-info-subtle mb-4 shadow-none">
                    <span class="fas fa-info-circle me-2"></span>
                    Saisissez les différents montants constituant cette avance. Ils seront additionnés automatiquement.
                </div>

                {% if form.locataire is defined %}
                <div class="mb-3">
                    <label class="form-label text-400 fw-bold fs-11 text-uppercase">{{ form_label(form.locataire)
                        }}</label>
                    {{ form_widget(form.locataire, {'attr': {'class': 'form-select bg-100 text-900 fs-11 border
                    border-300'}}) }}
                </div>
                {% endif %}

                <div class="row g-3 align-items-end mb-3">
                    <div class="col">
                        <label class="form-label text-400 fw-bold fs-11 text-uppercase">Ajouter un montant</label>
                        <div class="input-group">
                            <input type="number" id="inputPartialAmount"
                                class="form-control bg-100 text-900 fs-11 border border-300" placeholder="Ex: 500000">
                            <span class="input-group-text bg-200 text-900 fs-11 border border-300">Ar</span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="button" id="btnAddAmount" class="btn btn-primary btn-sm px-3">
                            <span class="fas fa-plus"></span>
                        </button>
                    </div>
                </div>

                <!-- Liste des montants ajoutés -->
                <div id="amountListContainer"
                    class="mb-3 p-3 bg-black bg-opacity-20 rounded border border-secondary d-none">
                    <div class="d-flex flex-wrap gap-2 mb-2" id="amountBadgeContainer">
                        <!-- Badges des montants injectés ici -->
                    </div>
                    <div
                        class="border-top border-secondary pt-2 mt-2 d-flex justify-content-between align-items-center">
                        <span class="fs-11 text-400 text-uppercase fw-bold">Somme Totale :</span>
                        <h5 class="mb-0 text-white" id="displayTotalTotal">0 Ar</h5>
                    </div>
                </div>

                {{ form_widget(form.montantTotal) }}
                {{ form_widget(form.montantDetails) }}

                <div class="mb-3">
                    <label class="form-label text-400 fw-bold fs-11 text-uppercase">Date versement</label>
                    {{ form_widget(form.dateAccord, {'attr': {'class': 'form-control bg-100 text-900 fs-11 border
                    border-300'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label text-400 fw-bold fs-11 text-uppercase">Preuve de versement
                        (PDF/Image)</label>
                    {{ form_widget(form.document, {'attr': {'class': 'form-control bg-100 text-900 fs-11 border
                    border-300'}}) }}
                </div>

                <div class="mb-0">
                    <label class="form-label text-400 fw-bold fs-11 text-uppercase">Observations</label>
                    {{ form_widget(form.motif, {'attr': {'class': 'form-control bg-100 text-900 fs-11 border
                    border-300', 'rows': '2'}}) }}
                </div>
            </div>
            <div class="modal-footer bg-black bg-opacity-20 border-top border-secondary py-3 px-4">
                <button class="btn btn-secondary btn-sm" type="button" data-bs-dismiss="modal">Annuler</button>
                <button class="btn btn-primary btn-sm px-4" type="submit" id="btnSubmitAvance" disabled>
                    <span class="fas fa-check-circle me-1" id="btnIcon"></span>
                    <span class="spinner-border spinner-border-sm d-none me-1" role="status" id="btnSpinner"></span>
                    Enregistrer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<!-- Modal ÉDITION Avance -->
<div class="modal fade" id="modalEditAvance" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 500px">
        <div class="modal-content border-0 bg-dark text-white">
            <div class="modal-header bg-black bg-opacity-20 border-bottom border-secondary py-3 px-4">
                <h5 class="modal-title text-white">Modifier l'avance</h5>
                <button class="btn-close btn-close-white" type="button" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <form id="formEditAvance" method="POST" enctype="multipart/form-data">
                <div class="modal-body p-4 pt-3">
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="mb-3">
                        <label class="form-label text-400 fw-bold fs-11 text-uppercase">Locataire concerné</label>
                        <select name="avance_sur_loyer[locataire]"
                            class="form-select bg-100 text-900 fs-11 border border-300" id="editLocataire">
                            {% for loc in stats.locataireStats ? [stats.locataireStats] : [] %}
                            <option value="{{ loc.id }}">{{ loc.nomComplet }}</option>
                            {% endfor %}
                            {# Si on est en mode global admin, il faudrait charger tous les locataires.
                            Mais ici on va injecter via JS si besoin ou se baser sur ce qui est dispo dans la page. #}
                        </select>
                    </div>
                    {% endif %}

                    <div class="row g-3 align-items-end mb-3">
                        <div class="col">
                            <label class="form-label text-400 fw-bold fs-11 text-uppercase">Ajouter un montant</label>
                            <div class="input-group">
                                <input type="number" id="editInputPartialAmount"
                                    class="form-control bg-100 text-900 fs-11 border border-300"
                                    placeholder="Ex: 500000">
                                <span class="input-group-text bg-200 text-900 fs-11 border border-300">Ar</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <button type="button" id="editBtnAddAmount" class="btn btn-primary btn-sm px-3">
                                <span class="fas fa-plus"></span>
                            </button>
                        </div>
                    </div>

                    <div id="editAmountListContainer"
                        class="mb-3 p-3 bg-black bg-opacity-20 rounded border border-secondary">
                        <div class="d-flex flex-wrap gap-2 mb-2" id="editAmountBadgeContainer"></div>
                        <div
                            class="border-top border-secondary pt-2 mt-2 d-flex justify-content-between align-items-center">
                            <span class="fs-11 text-400 text-uppercase fw-bold">Somme Totale :</span>
                            <h5 class="mb-0 text-white" id="editDisplayTotalTotal">0 Ar</h5>
                        </div>
                    </div>

                    <input type="hidden" name="avance_sur_loyer[montantTotal]" id="editHiddenTotal">
                    <input type="hidden" name="avance_sur_loyer[montantDetails]" id="editHiddenDetails">
                    <input type="hidden" name="avance_sur_loyer[_token]" value="{{ csrf_token('avance_sur_loyer') }}">

                    <div class="mb-3">
                        <label class="form-label text-400 fw-bold fs-11 text-uppercase">Date versement</label>
                        <input type="date" name="avance_sur_loyer[dateAccord]" id="editDateAccord"
                            class="form-control bg-100 text-900 fs-11 border border-300">
