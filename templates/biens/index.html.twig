{% extends 'base.html.twig' %}

{% block title %}Liste des Biens{% endblock %}

{% block body %}
    <!-- En-tête page -->
    <div class="card mb-3">
        <div class="card-header">
            <div class="row flex-between-end">
                <div class="col-auto align-self-center">
                    <h5 class="mb-0">Liste des Biens Immobiliers</h5>
                    <p class="mb-0 fs-11 text-muted">Gestion et suivi de votre patrimoine immobilier</p>
                </div>
                <div class="col-auto ms-auto">
                    <div class="btn-group" role="group">
                        <button class="btn btn-primary btn-sm" type="button">
                            <span class="fas fa-download me-1"></span>Exporter
                        </button>
                        <a href="{{ path('app_bien_ajouter') }}" class="btn btn-success btn-sm">
                            <span class="fas fa-plus me-1"></span>Ajouter un bien
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres et recherche -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fs-11">Recherche</label>
                    <div class="input-group input-group-sm">
                        <input class="form-control" type="text" placeholder="Adresse, référence..." />
                        <button class="btn btn-outline-secondary" type="button">
                            <span class="fas fa-search"></span>
                        </button>
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="form-label fs-11">Type</label>
                    <select class="form-select form-select-sm">
                        <option value="">Tous types</option>
                        <option value="appartement">Appartement</option>
                        <option value="maison">Maison</option>
                        <option value="studio">Studio</option>
                        <option value="commerce">Commerce</option>
                        <option value="garage">Garage</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fs-11">Statut</label>
                    <select class="form-select form-select-sm">
                        <option value="">Tous statuts</option>
                        <option value="occupe">Occupé</option>
                        <option value="vacant">Vacant</option>
                        <option value="maintenance">En maintenance</option>
                        <option value="travaux">En travaux</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fs-11">Ville</label>
                    <select class="form-select form-select-sm">
                        <option value="">Toutes villes</option>
                        <option value="paris">Paris</option>
                        <option value="lyon">Lyon</option>
                        <option value="marseille">Marseille</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary btn-sm w-100" type="button">
                        <span class="fas fa-filter me-1"></span>Plus de filtres
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row g-3 mb-3">
        <div class="col-sm-6 col-lg-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="display-4 fs-4 mb-2 fw-normal font-sans-serif text-primary">24</div>
                    <h6 class="text-muted mb-0">Total Biens</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="display-4 fs-4 mb-2 fw-normal font-sans-serif text-success">22</div>
                    <h6 class="text-muted mb-0">Occupés</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="display-4 fs-4 mb-2 fw-normal font-sans-serif text-warning">1</div>
                    <h6 class="text-muted mb-0">En Transition</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="display-4 fs-4 mb-2 fw-normal font-sans-serif text-danger">1</div>
                    <h6 class="text-muted mb-0">Vacants</h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des biens -->
    <div class="card">
        <div class="card-header">
            <div class="row flex-between-end">
                <div class="col-auto">
                    <h6 class="mb-0">Biens Immobiliers (24)</h6>
                </div>
                <div class="col-auto">
                    <div class="btn-group btn-group-sm" role="group">
                        <input type="radio" class="btn-check" name="viewMode" id="grid" checked>
                        <label class="btn btn-outline-secondary" for="grid">
                            <span class="fas fa-th"></span>
                        </label>
                        <input type="radio" class="btn-check" name="viewMode" id="list">
                        <label class="btn btn-outline-secondary" for="list">
                            <span class="fas fa-list"></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <!-- Mode grille -->
            <div class="row g-3 p-3" id="gridView">
                <!-- Bien 1 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="position-relative">
                            <div style="height: 200px; background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%); display: flex; align-items: center; justify-content: center;">
                                <span class="fas fa-image fa-2x text-muted"></span>
                            </div>
                            <span class="badge badge-subtle-success position-absolute top-0 start-0 m-2">Occupé</span>
                            <div class="position-absolute top-0 end-0 m-2">
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-light btn-sm" title="Modifier">
                                        <span class="fas fa-edit"></span>
                                    </button>
                                    <button class="btn btn-light btn-sm" title="Plus d'options">
                                        <span class="fas fa-ellipsis-v"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title mb-1">15 Rue Victor Hugo</h6>
                            <p class="card-text fs-11 text-muted mb-2">Paris 15e - T3, 75m²</p>
                            <div class="row g-0 mb-2">
                                <div class="col-6">
                                    <div class="fs-11 text-muted">Loyer</div>
                                    <div class="fw-semi-bold">1 850€</div>
                                </div>
                                <div class="col-6">
                                    <div class="fs-11 text-muted">Charges</div>
                                    <div class="fw-semi-bold">150€</div>
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="fs-11 text-muted">Locataire</div>
                                <div class="fw-semi-bold fs-11">Marie Dubois</div>
                            </div>
                        </div>
                        <div class="card-footer bg-light py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Réf: BM001</small>
                                <a href="#" class="btn btn-primary btn-sm">Détails</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bien 2 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="position-relative">
                            <div style="height: 200px; background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%); display: flex; align-items: center; justify-content: center;">
                                <span class="fas fa-image fa-2x text-muted"></span>
                            </div>
                            <span class="badge badge-subtle-success position-absolute top-0 start-0 m-2">Occupé</span>
