        <!-- Pagination -->
        <div class="card-footer bg-light">
            <div class="row align-items-center">
                <div class="col">
                    <span class="fs-11 text-muted">Affichage 6 biens sur 24</span>
                </div>
                <div class="col-auto">
                    <nav aria-label="Pagination biens">
                        <ul class="pagination pagination-sm mb-0">
