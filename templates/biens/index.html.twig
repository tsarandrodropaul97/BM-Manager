                            </div>
                        </div>
                        <div class="card-footer bg-light py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Réf: BM005</small>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-info btn-sm" title="Candidatures">
                                        <span class="fas fa-users"></span>
                                    </button>
                                    <a href="#" class="btn btn-primary btn-sm">Détails</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bien 6 - Placeholder pour plus de biens -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-dashed">
                        <div class="card-body d-flex align-items-center justify-content-center text-center">
                            <div>
                                <span class="fas fa-plus fa-2x text-muted mb-3 d-block"></span>
                                <p class="text-muted mb-2">Ajouter un nouveau bien</p>
                                <a href="{{ path('app_bien_ajouter') }}" class="btn btn-outline-primary btn-sm">
                                    <span class="fas fa-plus me-1"></span>Ajouter
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
