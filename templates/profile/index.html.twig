{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="row g-3">
    <div class="col-12">
        <div class="card mb-3">
            <div class="card-header border-bottom d-flex flex-between-center g-3">
                <h5 class="mb-0">Réglages du Profil</h5>
                <span class="badge badge-subtle-primary">Compte Locataire</span>
            </div>
            <div class="card-body bg-light dark__bg-1100">
                {% for label, messages in app.flashes %}
                {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show"
                    role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {% endfor %}
                {% endfor %}

                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="row g-3">
                    <!-- Colonne Gauche : Identité + CIN + Sécurité -->
                    <div class="col-lg-8">

                        <!-- Informations Personnelles -->
                        <div class="card shadow-none border mb-3">
                            <div class="card-header border-bottom">
                                <h6 class="mb-0 text-primary">
                                    <span class="fas fa-id-card me-2"></span>Informations Personnelles
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row align-items-center mb-4 g-3 text-center text-sm-start">
                                    <div class="col-12 col-sm-auto">
                                        <div class="avatar avatar-5xl mx-auto">
                                            {% if locataire.photo %}
                                            <img src="{{ asset('uploads/locataires/' ~ locataire.photo) }}" alt=""
                                                class="rounded-circle shadow-sm"
                                                style="width: 100px; height: 100px; object-fit: cover;">
                                            {% else %}
                                            <div class="bg-subtle-primary text-primary d-flex align-items-center justify-content-center rounded-circle mx-auto"
                                                style="width: 100px; height: 100px;">
                                                <span class="fas fa-user fa-3x"></span>
                                            </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm">
                                        <h4 class="mb-1">{{ locataire.nomComplet }}</h4>
                                        <p class="text-muted fs-11 mb-2">Modifier votre photo de profil</p>
                                        <div class="col-12 col-md-8 mx-auto mx-sm-0">
                                            {{ form_widget(form.photo, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                            {{ form_errors(form.photo) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3">
                                    <div class="col-12 col-md-6">
                                        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                        {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                        {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_label(form.adresseActuelle, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.adresseActuelle, {'attr': {'class': 'form-control', 'rows': 2}}) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                        {{ form_label(form.profession, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.profession, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                        {{ form_label(form.employeur, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.employeur, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Section CIN -->
                        <div class="card shadow-none border mb-3">
                            <div class="card-header border-bottom">
                                <h6 class="mb-0 text-warning">
                                    <span class="fas fa-address-card me-2"></span>Carte d'Identité Nationale (CIN)
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="text-muted fs-11 mb-3">
                                    <span class="fas fa-info-circle me-1"></span>
                                    Formats acceptés : JPG, PNG, WEBP ou PDF. Taille maximale : 2 Mo par fichier.
                                </p>
                                <div class="row g-4">
                                    <!-- CIN Recto -->
                                    <div class="col-12 col-md-6">
                                        <label class="form-label fw-semi-bold">
                                            <span class="fas fa-id-card me-1 text-warning"></span>CIN Recto
                                        </label>
                                        {% if locataire.cinRecto %}
                                        <div class="mb-2">
                                            {% set cinRectoExt = locataire.cinRecto|split('.')|last|lower %}
                                            {% if cinRectoExt in ['jpg', 'jpeg', 'png', 'webp'] %}
                                            <div class="border rounded overflow-hidden" style="height: 140px; background: #f0f4f8; cursor: pointer;"
                                                onclick="openPreview('{{ asset('uploads/locataires/' ~ locataire.cinRecto) }}', 'CIN Recto')">
                                                <img src="{{ asset('uploads/locataires/' ~ locataire.cinRecto) }}"
                                                    alt="CIN Recto"
                                                    style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.2s;"
                                                    onmouseover="this.style.transform='scale(1.05)'"
                                                    onmouseout="this.style.transform='scale(1)'">
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mt-1">
                                                <small class="text-success"><span class="fas fa-check-circle me-1"></span>Document enregistré</small>
                                                <button type="button" class="btn btn-link btn-sm p-0 text-primary fs-11"
                                                    onclick="openPreview('{{ asset('uploads/locataires/' ~ locataire.cinRecto) }}', 'CIN Recto')">
                                                    <span class="fas fa-expand-alt me-1"></span>Agrandir
                                                </button>
                                            </div>
                                            {% else %}
                                            <div class="border rounded d-flex align-items-center justify-content-center bg-subtle-warning"
                                                style="height: 140px;">
                                                <div class="text-center">
                                                    <span class="fas fa-file-pdf fa-3x text-warning mb-2 d-block"></span>
                                                    <small class="text-warning fw-bold">Document PDF</small>
                                                </div>
                                            </div>
                                            <div class="d-flex mt-1">
                                                <a href="{{ asset('uploads/locataires/' ~ locataire.cinRecto) }}" target="_blank"
                                                    class="btn btn-link btn-sm p-0 text-primary fs-11">
                                                    <span class="fas fa-external-link-alt me-1"></span>Voir le PDF
                                                </a>
                                            </div>
                                            {% endif %}
                                        </div>
                                        <label class="form-label fs-11 text-muted">Remplacer le document :</label>
                                        {% else %}
                                        <div class="border rounded border-dashed d-flex align-items-center justify-content-center mb-2"
                                            style="height: 140px; background: #f8f9fa; border-style: dashed !important;">
                                            <div class="text-center text-muted">
                                                <span class="fas fa-cloud-upload-alt fa-2x mb-2 d-block text-300"></span>
                                                <small>Aucun document</small>
                                            </div>
                                        </div>
                                        {% endif %}
                                        {{ form_widget(form.cinRecto, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        {{ form_errors(form.cinRecto) }}
                                    </div>

                                    <!-- CIN Verso -->
                                    <div class="col-12 col-md-6">
                                        <label class="form-label fw-semi-bold">
                                            <span class="fas fa-id-card-alt me-1 text-warning"></span>CIN Verso
                                        </label>
                                        {% if locataire.cinVerso %}
                                        <div class="mb-2">
                                            {% set cinVersoExt = locataire.cinVerso|split('.')|last|lower %}
                                            {% if cinVersoExt in ['jpg', 'jpeg', 'png', 'webp'] %}
                                            <div class="border rounded overflow-hidden" style="height: 140px; background: #f0f4f8; cursor: pointer;"
                                                onclick="openPreview('{{ asset('uploads/locataires/' ~ locataire.cinVerso) }}', 'CIN Verso')">
                                                <img src="{{ asset('uploads/locataires/' ~ locataire.cinVerso) }}"
                                                    alt="CIN Verso"
                                                    style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.2s;"
                                                    onmouseover="this.style.transform='scale(1.05)'"
                                                    onmouseout="this.style.transform='scale(1)'">
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mt-1">
                                                <small class="text-success"><span class="fas fa-check-circle me-1"></span>Document enregistré</small>
                                                <button type="button" class="btn btn-link btn-sm p-0 text-primary fs-11"
                                                    onclick="openPreview('{{ asset('uploads/locataires/' ~ locataire.cinVerso) }}', 'CIN Verso')">
                                                    <span class="fas fa-expand-alt me-1"></span>Agrandir
                                                </button>
                                            </div>
                                            {% else %}
                                            <div class="border rounded d-flex align-items-center justify-content-center bg-subtle-warning"
                                                style="height: 140px;">
                                                <div class="text-center">
                                                    <span class="fas fa-file-pdf fa-3x text-warning mb-2 d-block"></span>
                                                    <small class="text-warning fw-bold">Document PDF</small>
                                                </div>
                                            </div>
                                            <div class="d-flex mt-1">
                                                <a href="{{ asset('uploads/locataires/' ~ locataire.cinVerso) }}" target="_blank"
                                                    class="btn btn-link btn-sm p-0 text-primary fs-11">
                                                    <span class="fas fa-external-link-alt me-1"></span>Voir le PDF
                                                </a>
                                            </div>
                                            {% endif %}
                                        </div>
                                        <label class="form-label fs-11 text-muted">Remplacer le document :</label>
                                        {% else %}
                                        <div class="border rounded border-dashed d-flex align-items-center justify-content-center mb-2"
                                            style="height: 140px; background: #f8f9fa;">
                                            <div class="text-center text-muted">
                                                <span class="fas fa-cloud-upload-alt fa-2x mb-2 d-block text-300"></span>
                                                <small>Aucun document</small>
                                            </div>
                                        </div>
                                        {% endif %}
                                        {{ form_widget(form.cinVerso, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        {{ form_errors(form.cinVerso) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sécurité et Mot de passe -->
                        <div class="card shadow-none border">
                            <div class="card-header border-bottom">
                                <h6 class="mb-0 text-danger">
                                    <span class="fas fa-shield-alt me-2"></span>Sécurité et Mot de passe
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control',
                                        'placeholder': 'Votre mot de passe actuel'}}) }}
                                        <div class="fs-11 text-muted mt-1 italic">Requis uniquement pour changer de mot
                                            de passe.</div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        {{ form_label(form.plainPassword.first, null, {'label_attr': {'class':
                                        'form-label'}}) }}
                                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                        {{ form_label(form.plainPassword.second, null, {'label_attr': {'class':
                                        'form-label'}}) }}
                                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Colonne Droite : Infos Location & Actions -->
                    <div class="col-lg-4">
                        <div class="sticky-top" style="top: 80px; z-index: 10;">
                            <div class="card mb-3 border border-primary-subtle bg-subtle-primary">
                                <div class="card-body">
                                    <h6 class="text-primary text-uppercase fs-11 fw-semi-bold mb-3">Votre Location
                                        Actuelle</h6>
                                    {% if locataire.bien %}
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="avatar avatar-3xl me-3">
                                            {% if locataire.bien.image %}
                                            <img src="{{ asset('uploads/biens/' ~ locataire.bien.image) }}" alt=""
                                                class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                            {% else %}
                                            <div class="bg-primary text-white d-flex align-items-center justify-content-center rounded"
                                                style="width: 60px; height: 60px;">
                                                <span class="fas fa-home"></span>
                                            </div>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <h6 class="mb-0 text-900">{{ locataire.bien.designation }}</h6>
                                            <p class="fs-11 mb-0 text-600">{{ locataire.bien.ville }}</p>
                                        </div>
                                    </div>
                                    <div class="border-top border-primary-subtle pt-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="fs-11 text-700">Date d'arrivée :</span>
                                            <span class="fs-11 fw-bold">{{ locataire.dateEntree|date('d/m/Y') }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="fs-11 text-700">Loyer mensuel :</span>
                                            <span class="fs-11 fw-bold text-primary">{{ locataire.bien.prix ?
                                                locataire.bien.prix|number_format(0, ',', ' ') ~ ' Ar' : 'N/A' }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-0">
                                            <span class="fs-11 text-700">Statut bail :</span>
                                            <span class="badge badge-subtle-success fs-10 px-2">{{
                                                locataire.statut|capitalize }}</span>
                                        </div>
                                    </div>
                                    {% else %}
                                    <div class="text-center py-3">
                                        <span class="fas fa-key fa-2x text-300 mb-2"></span>
                                        <p class="text-muted fs-11 mb-0">Aucun bien associé à votre compte.</p>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Statut CIN -->
                            <div class="card mb-3 border">
                                <div class="card-body">
                                    <h6 class="text-uppercase fs-11 fw-semi-bold text-600 mb-3">
                                        <span class="fas fa-address-card me-1"></span>Documents CIN
                                    </h6>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="fs-11 text-700">CIN Recto :</span>
                                        {% if locataire.cinRecto %}
                                        <span class="badge badge-subtle-success fs-10">
                                            <span class="fas fa-check me-1"></span>Fourni
                                        </span>
                                        {% else %}
                                        <span class="badge badge-subtle-warning fs-10">
                                            <span class="fas fa-exclamation me-1"></span>Manquant
                                        </span>
                                        {% endif %}
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fs-11 text-700">CIN Verso :</span>
                                        {% if locataire.cinVerso %}
                                        <span class="badge badge-subtle-success fs-10">
                                            <span class="fas fa-check me-1"></span>Fourni
                                        </span>
                                        {% else %}
                                        <span class="badge badge-subtle-warning fs-10">
                                            <span class="fas fa-exclamation me-1"></span>Manquant
                                        </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <div class="card border">
                                <div class="card-body">
                                    <button type="submit" class="btn btn-primary d-block w-100 mb-2">
                                        <span class="fas fa-save me-2"></span>Enregistrer
                                    </button>
                                    <a href="{{ path('app_dashboard') }}"
                                        class="btn btn-outline-secondary d-block w-100">
                                        Annuler
                                    </a>
                                    <p class="text-center fs-11 text-muted mt-3 mb-0">
                                        <span class="fas fa-info-circle me-1"></span>
                                        Les modifications seront prises en compte immédiatement.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<!-- Modal de prévisualisation image -->
<div class="modal fade" id="previewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h6 class="modal-title" id="previewModalTitle"></h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-2">
                <img id="previewModalImage" src="" alt="" class="img-fluid rounded" style="max-height: 75vh;">
            </div>
        </div>
    </div>
</div>

<script>
function openPreview(src, title) {
    document.getElementById('previewModalImage').src = src;
    document.getElementById('previewModalTitle').textContent = title;
    var modal = new bootstrap.Modal(document.getElementById('previewModal'));
    modal.show();
}
</script>
{% endblock %}